<div class="container">
  <h1>New Song</h1>

  <% if @song.errors.any? %>
  <% @song.errors.full_messages.each do |msg|%>
    <%=msg%>
    <%end%>
  <%end%>

    <%= form_for([@song.artist, @song]) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Save" %>
    <% end %>

</div>
