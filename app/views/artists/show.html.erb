<div class="container">
  <h2>Songs of <%= @artist.name %></h2>

    <div class="btn btn-danger">
      <%= link_to "Delete artist", artist_path(@artist), method: :delete, data: {confirm: "Are you sure you want to delete #{@artist.name} from this website?"} %>
    </div>

    <div class="container">
      <% if @artist.songs.any? %>
      <ul class="list-group">
      <% @artist.songs.each do |song| %>
      <li><%= link_to song.name, song_path(song), method: :delete, data: {confirm: "Are you sure you want to delete this song?"} %></li>
      <%end%>
      </ul>
      <%else%>
      <p>There are no songs for this artist.</p>
      <%end%>
    </div>

    <div class="btn btn-success">
      <%= link_to "Add a new song", new_song_path %>
    </div>

    <br>
    <br>

    <div class="btn btn-default">
      <%= link_to "Back to all artists", root_path %>
    </div>
</div>
