<div class="container">
  <h2>Songs of <%= @artist.name %></h2>


    <div class="container">
      <% if @artist.songs.any? %>
          <ul class="list-group">
          <% @artist.songs.each do |song| %>
            <li>
              <h4><%= song.name%>
                <%= link_to "X", artist_song_path(@artist, song), method: :delete, data: {confirm: "Are you sure you want to delete this song?"}%></h4>
            </li>
          <%end%>
          </ul>
        <%else%>
          <h4>There are no songs for this artist.</h4>
        <%end%>
    </div>

    <div class="btn btn-default">
      <h5><%= link_to "Add a new song", new_artist_song_path(@artist) %></h5>
    </div>

    <br>
    <br>
    <br>

    <div class="btn btn-default">
      <h5><%= link_to "Delete #{@artist.name} from Codaisseurify", artist_path(@artist), method: :delete, data: {confirm: "Are you sure you want to delete #{@artist.name} from this website?"}%></h5>
    </div>

    <br>
    <br>
    <hr>

    <div class="btn btn-default">
      <h5><%= link_to "Back to all artists", root_path %></h5>
    </div>
</div>
